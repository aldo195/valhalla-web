@import "../../constants/constants.styl"

.exception
  padding-top: 40px
  display: flex
  align-items: center
  height: 100%

  .imgBlock
    flex: 0 0 62.5%
    width: 62.5%
    padding-right: 152px
    zoom: 1
    &:before,
    &:after
      content: " "
      display: table

    &:after
      clear: both
      visibility: hidden
      font-size: 0
      height: 0

  .imgEle
    height: 360px
    width: 100%
    max-width: 430px
    float: right
    background-repeat: no-repeat
    background-position: 50% 50%
    background-size: contain

  .content
    flex: auto

    h1
      color: #434e59
      font-size: 72px
      font-weight: 600
      line-height: 72px
      margin-bottom: 24px

    .desc
      color: $text-color-secondary
      font-size: 20px
      line-height: 28px
      margin-bottom: 16px

@media screen and (max-width: $screen-xl)
  .exception
    .imgBlock
      padding-right: 88px

@media screen and (max-width: $screen-sm)
  .exception
    padding-top: 0
    display: block
    text-align: center
    .imgBlock
      padding-right: 0
      margin: 0 auto 24px

@media screen and (max-width: $screen-xs)
  .exception
    .imgBlock
      margin-bottom: -24px
      overflow: hidden
