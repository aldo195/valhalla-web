@import "../../constants/constants.styl"

#login-page
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

  #valhalla-logo
    width: 370px
    height: 306px
    margin: 50px 0 15px 0

  .login-form
    width: 400px

    .login-form-forgot
      float: right

    .login-form-button
      width: 100%

    .submit-button-item
      margin-bottom: 30px

    .error-message-area
      text-align: center
      color: $error-color
      padding-bottom: 10px
